{
    "version": 2,
    "name": "subatomic-rocks",
    "alias": "subatomic.rocks",
    "builds": [
      { "src": "src/public/favicon.png", "use": "@now/static-build" },
      { "src": "api/**.js", "use": "@now/node" },
      { "src": "package.json", "use": "@now/static-build" }
    ],
    "routes": [
      { "src": "favicon.png", "dest": "/src/public/favicon.png" },
      { "src": "^/api/(.*)", "dest": "/api/$1.js"},
      { "src": "^/css/(.*)", "dest": "/css/$1" },
      { "src": "^/img/(.*)", "dest": "/img/$1" },
      { "src": "^/js/(.*)", "dest": "/js/$1" },
      { "src": ".*", "dest": "/index.html" }
    ],
    "env": {
        "sendgrid_key": "@subatomic-sendgrid-key"
    }
}
